<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="112dp"
    android:layout_height="wrap_content"
    android:layout_marginStart="16dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:elevation="1dp"
    android:background="@drawable/shape_background_category_colors">

    <ImageView
        android:id="@+id/item_cat_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginStart="8dp"
        android:src="@drawable/ic_image"
        android:background="@drawable/shape_oval_medium"
        android:padding="12dp"
        android:elevation="2dp"
        android:contentDescription="@string/app_name"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/item_cat_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:fontFamily="@font/abel"
        android:textSize="16sp"
        android:textColor="@color/textPrimary"
        android:text="@string/app_name"
        app:layout_constraintTop_toBottomOf="@+id/item_cat_icon"/>

    <TextView
        android:id="@+id/item_cat_count_in"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:fontFamily="@font/abel"
        android:textSize="14sp"
        android:textColor="@color/textSecondary"
        android:text="@string/app_name"
        app:layout_constraintTop_toBottomOf="@+id/item_cat_title"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>